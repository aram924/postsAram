
<style>body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #eeeeee;
    margin: 0;
}</style>
<div class="model new post-container" >
  <h2>Create Category</h2>
  <%= link_to('Back to List', categories_path, class: 'back-link') %>
  <%= form_for(@category) do |f| %>
    <table>
      <tr>
        <th>Category</th>
        <td><%=f.text_field(:name) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Create Category", class: 'action create') %>
    </div>
  <%end %>
</div>